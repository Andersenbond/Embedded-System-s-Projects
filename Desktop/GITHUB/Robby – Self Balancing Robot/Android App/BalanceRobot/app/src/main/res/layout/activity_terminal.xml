<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:gravity="top">

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonSend"
        android:background="@drawable/buttonstyle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_marginTop="19dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="280dp">


        <TextView
            android:text="D"
            android:layout_height="30dp"
            android:id="@+id/DTextView"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:textColor="#147e36"
            android:gravity="center"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="I"
            android:layout_height="30dp"
            android:id="@+id/ITextView"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:textColor="#db1010"
            android:gravity="center"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="P"
            android:layout_height="30dp"
            android:id="@+id/PTextView"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:textColor="#00287f"
            android:gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text=""
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:textStyle="normal|bold"
            android:id="@+id/BalancePValue" />

        <TextView
            android:text=""
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:textStyle="normal|bold"
            android:id="@+id/BalanceIValue" />

        <TextView
            android:text=""
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:textStyle="normal|bold"
            android:id="@+id/BalanceDValue" />

        <TextView
            android:text=""
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:textStyle="normal|bold"
            android:id="@+id/DistancePValue" />

        <TextView
            android:text=""
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:textStyle="normal|bold"
            android:id="@+id/DistanceIValue" />

        <TextView
            android:text=""
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:textStyle="normal|bold"
            android:id="@+id/DistanceDValue"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <EditText
            android:layout_height="30dp"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Distance_P_Input"
            android:layout_below="@+id/gridLayout"
            android:layout_alignLeft="@+id/gridLayout"
            android:layout_alignStart="@+id/gridLayout"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="60dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:background="@drawable/edittextstyle"
            android:maxLength="5"
            android:layout_margin="2dp"/>

        <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/Balance_I_input"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:singleLine="true"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/edittextstyle"
            android:maxLength="5"
            android:layout_margin="2dp"/>

        <TextView
            android:text="Distance"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/DistanceTextView"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Balance "
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/BalanceTextView"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/Balance_P_Input"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/edittextstyle"
            android:maxLength="5"
            android:singleLine="true"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"/>

        <EditText
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:ems="10"
            android:id="@+id/Distance_I_Input"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="60dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:background="@drawable/edittextstyle"
            android:maxLength="5"
            android:layout_margin="2dp"/>

        <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/Distance_D_Input"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_width="60dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:background="@drawable/edittextstyle"
            android:maxLength="5"
            android:layout_height="30dp"
            android:layout_margin="2dp"/>

        <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/Balance_D_Input"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:singleLine="true"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/edittextstyle"
            android:maxLength="5"
            android:layout_margin="2dp"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="commandUp"
        android:id="@+id/UpButton"
        android:layout_marginTop="80dp"
        android:background="@drawable/arrowupbutton"
        android:layout_alignTop="@+id/ButtonSend"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="commandDown"
        android:id="@+id/DownButton"
        android:layout_marginTop="17dp"
        android:background="@drawable/arrowdownbutton"
        android:layout_below="@+id/UpButton"
        android:layout_toRightOf="@+id/LeftButton"
        android:layout_toEndOf="@+id/LeftButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="commandRight"
        android:id="@+id/RightButton"
        android:background="@drawable/arrowrightbutton"
        android:layout_alignBottom="@+id/DownButton"
        android:layout_toRightOf="@+id/UpButton"
        android:layout_toEndOf="@+id/UpButton"
        android:layout_marginBottom="14dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="commandLeft"
        android:id="@+id/LeftButton"
        android:background="@drawable/arrowleftbutton"
        android:layout_alignBaseline="@+id/RightButton"
        android:layout_alignBottom="@+id/RightButton"
        android:layout_toLeftOf="@+id/UpButton"
        android:layout_toStartOf="@+id/UpButton" />


</RelativeLayout>

